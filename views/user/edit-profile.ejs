<head>
    
    <style>
        body {
            margin-top: 20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }
    
        .main-body {
            padding: 15px;
        }
    
        .card {
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0, 0, 0, .125);
            border-radius: .25rem;
        }
    
        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }
    
        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }
    
        .gutters-sm>.col,
        .gutters-sm>[class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }
    
        .mb-3,
        .my-3 {
            margin-bottom: 1rem !important;
        }
    
        .bg-gray-300 {
            background-color: #e2e8f0;
        }
    
        .h-100 {
            height: 100% !important;
        }
    
        .shadow-none {
            box-shadow: none !important;
        }
        .no-outline:focus {
    outline: none;
}

    </style>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

</head>

                                <div class="container">
                                    <div class="main-body">
                                        <div class="row gutters-sm">
                                            <div class="col-md-4 mb-3">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="d-flex flex-column align-items-center text-center">
                                                            <img src="/images/user.jpeg" alt="Admin"
                                                                class="rounded-circle" width="150">
                                                            <div class="mt-3">
                                                                <h4>
                                                                    <%=user.name%>
                                                                </h4>
                                                                
                                                            
                                                                <a href="/orderDetails/<%=user._id%>"><button class="btn btn-primary">Orders</button></a>
                                                                <a href="/wishList"><button class="btn btn-outline-primary">Wishlist</button></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="card mt-3">
                                                    <ul class="list-group list-group-flush">
                                                        <li class="list-group-item d-flex mt-2 justify-content-between align-items-center flex-wrap">
                                                            <h6 class="mb-0"><a href="/edit-profile" style="text-decoration: none; color: black;">Edit Profile</a></h6>
                                                        </li>
                                                        <li class="list-group-item d-flex mt-2 justify-content-between align-items-center flex-wrap">
                                                            <h6 class="mb-0"><a href="/change-password"style="text-decoration: none; color: black;">Change Password</a></h6>
                                                        </li>

                                                        <li class="list-group-item d-flex mt-2 justify-content-between align-items-center flex-wrap">
                                                            <h6 class="mb-0"><a href="/wallet"style="text-decoration: none; color: black;">Wallet</a></h6>
                                
                                                        </li>

                                                        <li class="list-group-item d-flex mt-2 justify-content-between align-items-center flex-wrap">
                                                            <h6 class="mb-0">Referal Link</h6>
                                                            <svg onclick="referal('<%= user._id%>')" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard-minus ms-end" viewBox="0 0 16 16">
                                                                <path fill-rule="evenodd" d="M5.5 9.5A.5.5 0 0 1 6 9h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5z"/>
                                                                <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                                                                <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                                                              </svg>
                                                        </li>

                                                        <li class="list-group-item d-flex mt-2 justify-content-between align-items-center flex-wrap">
                                                            <h6 class="mb-0"><a href="/logout"style="text-decoration: none; color: black;">Logout</a></h6>
                                                        </li>
                                                        
                                                        
                                                    </ul>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-8">
                                                <form action="/edit-profile" method="post">
                                                <div class="card mb-3">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">Full Name</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                <input id="name" class="text-decoration-none border-0 no-outline" name="name" type="text" required="true"  value="<%=user.name%>">
                                                            </div>
                                                        </div>
                                                        <hr>
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">Email</h6>
                                                            </div>
                                                        
                                                            <div class="col-sm-9 text-secondary">
                                                                <%=user.email%>
                                                            </div>
                                                        </div>
                                                        <hr>
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">Phone</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                <input id="number" class="text-decoration-none border-0 no-outline" name="mobile" type="tel" required="true" value="<%=user.mobile%>">
                                                            </div>
                                                        </div>
                                                        
                                                        
                                
                                                        
                                                        <button type="submit" class="btn btn-outline-success">Save Changes</button>
                                                    </div>
                                                </div>
                                            </form>
                                                </div>
                                                
                                            </div>
                                        </div>
                                
                                    </div>
                                </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<script>
    function removeAdress(userId,adressId){
        $.ajax({
            url:'/remove-address',
            method:'post',
            data:{
                userId:userId,
                adressId:adressId,
            },
            success:(response)=>{
                if(response == true){
                    location.reload();;
                }else{
                    location.reload();
                }
                
            }
        })
    }

</script>
