        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">History</h2>
                </div>
                <h3 class="mr-4">Balace Amount: â‚¹ <%=wallet%></h3>
            </div>
            <div class="card mb-4 mr-5 ml-5">
                <header class="card-header">
                    <div class="row gx-3">
                        <form class="input-group">
                            <input id="filterItem" type="text" name="search" class="form-control" placeholder="Search name">
                            <button id="filterItems" class="btn btn-light bg mb-3" type="submit"> <i class="material-icons md-search"></i></button>
                        </form>
                        
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body ml-5 mr-5">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Amount</th>
                                    <th scope="col">status</th>
                                    <th scope="col">Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <%for(i=0;i<history.length;i++){%>
                                <tr>
                                   <td><%=history[i].amount%></td>
                                   <td><%=history[i].status%></td>
                                   <td><%=history[i].formattedDate%></td>
                                </tr>
                                <%}%>
                                
                            </tbody>
                        </table>
                        <% if (totalpages) { %>
                            <div class="pagination">
                              <% if (currentpage > 1) { %>
                                <button><a href="?page=<%= currentpage - 1 %>">Previous</a></button>
                              <% } %>
                          
                              <% for (let i = 1; i <= totalpages; i++) { %> <!-- Change the loop to start from 1 and go up to totalpages -->
                                <button><a href="?page=<%= i %>" class="<%= i === currentpage ? 'active' : '' %>"><%= i %></a></button>
                              <% } %>
                          
                              <% if (currentpage < totalpages) { %>
                                <button><a href="?page=<%= currentpage + 1 %>">Next</a></button>
                              <% } %>
                            </div>
                          <% } %> 
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->

        </section> <!-- content-main end// -->
    </main><!-- Bootstrap CSS (include this in the head section) -->
