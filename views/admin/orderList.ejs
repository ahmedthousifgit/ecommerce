<%-include('../partials/adminheader') %>
<body>
    <div class="screen-overlay"></div>
    <%-include('../partials/adminaside')%>

    <main class="main-wrap">
        <%-include('../partials/adminNav') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List </h2>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <form class="input-group">
                            <input id="filterItem" type="text" name="search" class="form-control" placeholder="Search name">
                            <button id="filterItems" class="btn btn-light bg mb-3" type="submit"> <i class="material-icons md-search"></i></button>
                        </form>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select" onchange="location.href='/admin/orderStatus?status=' + this.value">
                                <option>Status</option>
                                 <option value="all">All</option>
                                 <option value="0">Pending</option>
                                 <option value="-1">cancelled</option>
                                 <option value="1">approved</option>
                                 <option value="4">Shipped</option>
                                 <option value="2"> delivered</option>
                                 <option value="3"> Returned</option>
                            </select>
                        </div>
                        

                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Number</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Method</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                               <%orders.forEach(order=>{   %>
                                <tr>
                                    <td><b><%=order.userId.name  %></b></td>
                                    <td><%= order.userId.mobile %></td>
                                    <td><%= order.totalPrice %></td>
                                            
                                    
                                                
                                            
                                    <td><%= order.status %></td>
                                    <td><%= formatDate(order.createdOn) %></td>
                                    <td><%= order.payment %></td>
                                    <td class="text-end">
                                                
                                        <a href="/admin/orderDetails/<%=order._id %>" class="btn btn-md rounded font-sm ml-5">Detail</a>
                                                                       
                                    </td>
     
                                </tr>
                               <% }); %>
                            </tbody>
                        </table>
                        
                            <!-- <div class="pagination">
                             
                                <button><a href="" style="color:black; text-decoration: none;" >Previous</a></button>
                              
                          
                              
                                <button><a href=""  style="color:black; text-decoration: none;" class=""></a></button>
                              
                          
                              
                                <button><a href="" style="color:black; text-decoration: none;" >Next</a></button>
                              
                            </div> -->
                          
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                  <ul class="pagination">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="/admin/orders?page=<%= i %>"><%= i %></a>
                      </li>
                    <% } %>
                  </ul>
                </nav>
              </div>

        </section> <!-- content-main end// -->
    </main><!-- Bootstrap CSS (include this in the head section) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="assets/js/main.js" type="text/javascript"></script>
</body>

<style>
    .table-spacing th,
    .table-spacing td {
        padding-left: 80px; /* Adjust the value as needed for the desired spacing */
    }
    .pagination {
display: flex;
justify-content: center;
align-items: center;
margin-top: 20px;
}

.pagination button {
background-color: #f5f5f5;
border: 1px solid #ccc;
padding: 6px 12px;
margin: 0 3px;
cursor: pointer;

transition: background-color 0.3s, color 0.3s;
}

.pagination button.active {
background-color: #007bff;
color: #fff;
border-color: #007bff;
}

.pagination button:hover {
background-color: #ddd;
}

</style>

<%-include('../partials/adminfooter') %>

