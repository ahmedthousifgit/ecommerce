<%-include('../partials/adminheader') %>

<body>
  <div class="screen-overlay"></div>
  <%-include('../partials/adminaside') %>
  <main class="main-wrap">
    <%-include('../partials/adminNav') %>
    <section class="content-main">
      <form
        action="/admin/edit-products/<%= products._id %>"
        method="post"
        enctype="multipart/form-data"
        onsubmit="return validatePrices()"
      >
        <div class="row">
          <div class="col-9">
            <div class="content-header">
              <h2 class="content-title">Edit Product</h2>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="card mb-4">
              <div class="card-header">
                <h4>Basic</h4>
              </div>
              <div class="card-body">
                <!-- Include input fields for editing product attributes, pre-populated with current values -->
                <div class="mb-4">
                  <label for="product_name" class="form-label">Product title</label>
                  <input type="text" class="form-control" id="product_name" name="name" value="<%= products.name %>" />
                </div>
                <!-- Other input fields for editing -->
                <div class="mb-4">
                  <label class="form-label">Full description</label>
                  <textarea class="form-control" rows="4" name="description"><%= products.description %></textarea>
                </div>
                
                <div class="row">
                  <div class="col-lg-4">
                    <div class="mb-4">
                      <label class="form-label">Regular price</label>
                      <div class="row gx-2">
                        <input type="text" class="form-control" name="regularPrice" id="regularPrice" value="<%= products.regularPrice %>" />
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="mb-4">
                      <label class="form-label">Sale price</label>
                      <input type="text" class="form-control" name="salePrice" id="salePrice" value="<%= products.salePrice %>" />
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <label class="form-label">Unit</label>
                    <input type="text" class="form-control" name="units" value="<%= products.units %>" />
                  </div>
                </div>
                <div class="mb-4">
 <label class="form-label">Tax rate</label>
                  <input type="text" class="form-control" name="taxRate" value="<%= products.taxRate %>" />
                </div>
                
                <!-- Other form fields for product details -->
                <div class="d-flex justify-content-end">
                  <button type="submit" class="btn btn-md rounded font-sm col-lg-4 hover-up">Save Changes</button>
                </div>
              </div>
            </div>
            <!-- card end// -->
          </div>
          <div class="col-lg-3">
            <div class="card mb-4">
              <div class="card-header">
                <h4>Media</h4>
              </div>
              <div class="card-body">
                <p>Images</p>
                <%for(i=0;i<products.image.length;i++){%>
                  <img src="/uploads/products/<%=products.image[i]%>" alt="Something fishyy.." width="85" height="85" accept="image/*"
                      onchange="validateImageFile(this)">
                  <%}%>
            </div>
            <div class="card-body">
              <small style="font-weight: bold;">Upload 4 images</small>
              <div class="input-upload">
                  <br>
                  <input class="form-control" name="image" type="file" multiple >
              </div>
          </div>

            </div>
            <!-- card end// -->
            <div class="card mb-4">
              <div class="card-header">
                <h4>Organization</h4>
              </div>
              <div class="card-body">
                <div class="row gx-2">
                  <div class="col-sm-6 mb-3">
                    <label class="form-label">Category</label>
                    <select class="form-select" name="category">
                      <% categories.forEach(category => { %>
                      <option value="<%= category._id %>">
                        <%= category.name %>
                      </option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-sm-6 mb-3">
                    <label class="form-label">Sub-category</label>

                      <select class="form-select" name="subCategory">
                        <option value="Nike" <% if (products.subCategory === 'Nike') { %>selected<% } %>>Nike</option>
                        <option value="Adidas" <% if (products.subCategory === 'Adidas') { %>selected<% } %>>Adidas</option>
                        <option value="Puma" <% if (products.subCategory === 'Puma') { %>selected<% } %>>Puma</option>
                        <option value="Sketchers" <% if (products.subCategory === 'Sketchers') { %>selected<% } %>>Sketchers</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>
         </div>      
      </form>
    </section>
    <script>
      function validatePrices() {
        var regularPrice = document.getElementById('regularPrice').value;
        var salePrice = document.getElementById('salePrice').value;
  
        if (parseFloat(regularPrice) < 0 || parseFloat(salePrice) < 0) {
          alert('Negative prices are not allowed!');
          return false; 
        }
  
        return true; 
      }
    </script>
    <!-- content-main end// -->
    <%-include('../partials/adminfooter') %>
  </main>
</body>
